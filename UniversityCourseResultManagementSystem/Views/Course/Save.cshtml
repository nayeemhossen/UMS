@model UniversityCourseResultManagementSystem.Models.Course
@{
	ViewBag.Title = "SaveCourse";
}
<h2>Save Course</h2>
<div align="center">
	@if (ViewBag.Message != null)
	{
		<span class="alert alert-success" id="success-alert">@ViewBag.Message</span>
	}
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()


	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true)
		<div class="form-group">
			@Html.LabelFor(model => model.CourseCode, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CourseCode, new { htmlAttributes = new {id= "txtCourseCode", @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CourseCode, "", new { id = "txtCourseCodeErrorMessage", @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.CourseName, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CourseName, new { htmlAttributes = new { id = "txtCourseName", @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CourseName, "", new {  @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.CourseCredit, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CourseCredit, new { htmlAttributes = new { id = "txtCourseCredit", @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CourseCredit, "", new {  @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.CourseDescription, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CourseDescription, new { htmlAttributes = new { id = "txtCourseDescription", @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CourseDescription, "", new {  @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.DepartmentId, "Department", new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.DepartmentId, ViewBag.DepartmentId as SelectList, "--Select Department--", new { @id = "ddlDepartmentId", @class = "form-control" })
				@Html.ValidationMessageFor(model => model.DepartmentId, "", new {  @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.SemesterId, "Semester", new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.SemesterId, ViewBag.SemesterId as SelectList, "--Select Semester--", new { @id = "ddlSemesterId", @class = "form-control" })
				@Html.ValidationMessageFor(model => model.SemesterId, "", new {  @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-primary btn-sm" />
			</div>
		</div>
	</div>
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script>
$(document).ready(function () {

			$("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
				$("#success-alert").alert('close');
			});

			$("#submit").click(function () {

				//$("#deptCode").val("");
				//$("#deptName").val("");
			});
});
		function ResetValue() {
			$("#txtCourseCode").val("");
			$("#txtCourseName").val("");
			$("#txtCourseCredit").val("");
			$("#txtCourseDescription").val("");
			$("#ddlDepartmentId").val("");
			$("#ddlSemesterId").val("");
		}
	</script>
}
