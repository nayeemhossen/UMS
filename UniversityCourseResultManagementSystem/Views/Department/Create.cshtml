@model UniversityCourseResultManagementSystem.Models.Department
@{
	ViewBag.Title = "SaveDepartment";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save Department</h2>
	<div align="center">
		@if (ViewBag.Message != null)
		{
			<span class="alert alert-success" id="success-alert">@ViewBag.Message</span>
		}
	</div>	
		@using (Html.BeginForm("Create", "Department", FormMethod.Post, new { id = "SaveDepartmentForm" }))
		{
			@Html.AntiForgeryToken()
			if (ViewBag.Massage != null)
			{
				<p>@ViewBag.Massage</p>
			}

			<div class="form-horizontal">
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.DeptCode, new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(m => m.DeptCode, new { id = "deptCode", htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(m => m.DeptCode, "", new { id = "txtDeptCodeErrorMessage", @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.DeptName, new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(m => m.DeptName, new { id = "deptName", htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(m => m.DeptName, "", new { id = "txtDeptNameErrorMessage", @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" id="submit" name="submit" value="Save" class="btn btn-primary btn-sm" />
					</div>
				</div>
				
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<label id="successMessage" style="color: green;"></label>
						<label id="errorMessage" style="color: red;"></label>
					</div>
				</div>
				</div>

	}
		@section Scripts {
			@Scripts.Render("~/bundles/jqueryval")
			<script>
				$(document).ready(function () {

					$("#success-alert").fadeTo(2000, 500).slideUp(500,
						function () {
							$("#success-alert").alert('close');
						});

					$("#submit").click(function () {
						$("#deptCode").val("");
						$("#deptName").val("");

					});
				});

				function ResetValue() {
					$("#deptCode").val("");
					$("#deptName").val("");
				}
			</script>
		}

